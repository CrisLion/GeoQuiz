<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSentence"
        android:layout_width="245dp"
        android:layout_height="38dp"
        android:layout_marginTop="332dp"
        android:text="Â¿Es Lima la capital de Peru?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btNo"
        android:layout_width="61dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="60dp"
        android:background="#FFDAD5D5"
        android:text="NO"
        android:textColor="@color/white"
        android:textColorHighlight="#DAD5D5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btYes"
        app:layout_constraintTop_toBottomOf="@+id/tvSentence"
        app:shapeAppearance="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/btYes"
        android:layout_width="61dp"
        android:layout_height="36dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:background="#FFDAD5D5"
        android:text="SI"
        android:textColor="@color/white"
        android:textColorHighlight="#DAD5D5"
        app:layout_constraintEnd_toStartOf="@+id/btNo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSentence"
        app:shapeAppearance="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/btNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="72dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>